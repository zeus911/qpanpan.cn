@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "登录";
}

@section scripts {
    <script type="text/javascript">
        $(function () {
            //得到焦点
            $("#password").focus(function () {
                $("#left_hand").animate({
                    left: "150",
                    top: " -38"
                }, {
                    step: function () {
                        if (parseInt($("#left_hand").css("left")) > 140) {
                            $("#left_hand").attr("class", "left_hand");
                        }
                    }
                }, 2000);
                $("#right_hand").animate({
                    right: "-64",
                    top: "-38px"
                }, {
                    step: function () {
                        if (parseInt($("#right_hand").css("right")) > -70) {
                            $("#right_hand").attr("class", "right_hand");
                        }
                    }
                }, 2000);
            });
            //失去焦点
            $("#password").blur(function () {
                $("#left_hand").attr("class", "initial_left_hand");
                $("#left_hand").attr("style", "left:100px;top:-12px;");
                $("#right_hand").attr("class", "initial_right_hand");
                $("#right_hand").attr("style", "right:-112px;top:-12px");
            });

            $('#btnlogin').click(function () {
                ajaxPost('/Account/Login', {
                    "username": $('#username').val(),
                    "password": $('#password').val(),
                    "security": $('#security').val(),
                    "remember": ($('#remember')[0]).checked
                }, getcode);
            });

            // 为最后一个文本框注册回车事件
            Qkeydown('#security', '#btnlogin');
        });

        var getcode = function () {
            $('#scode').attr('src', '/Account/SecurityCode/' + new Date().getMilliseconds());
        };
    </script>

    <script src="http://static.qpanpan.cn/Admin/common.js"></script>
    <meta name="GENERATOR" content="MSHTML 11.00.9600.17496" />
}

@section styles {
    <style>
        body {
            background: #ebebeb;
            font-family: "Helvetica Neue", "Hiragino Sans GB", "Microsoft YaHei", "\9ED1\4F53", Arial, sans-serif;
            color: #222;
            font-size: 12px;
        }

        * {
            padding: 0px;
            margin: 0px;
        }

        .top_div {
            background: #008ead;
            width: 100%;
            height: 200px;
        }

        .ipt {
            border: 1px solid #d3d3d3;
            padding: 10px 10px;
            width: 290px;
            -ms-border-radius: 4px;
            border-radius: 4px;
            padding-left: 35px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            -ms-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
            -moz-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
            -ms-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
        }

        .ipt:focus {
            border-color: #66afe9;
            outline: 0;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6);
            -ms-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, .6);
        }

        /*用户名图片*/
        .u_logo {
            background: url("http://static.qpanpan.cn/Content/images/sprite.png") -167px 0px no-repeat;
            padding: 10px 10px;
            position: absolute;
            top: 43px;
            left: 40px;
        }
        /*密码图片*/
        .p_logo {
            background: url("http://static.qpanpan.cn/Content/images/sprite.png") -457px -96px no-repeat;
            padding: 10px 10px;
            position: absolute;
            top: 12px;
            left: 40px;
        }
        /*验证码图片*/
        .s_logo {
            background: url("http://static.qpanpan.cn/Content/images/sprite.png") -456px -49px no-repeat;
            padding: 10px 10px;
            position: absolute;
            top: 12px;
            left: 40px;
        }

        a {
            text-decoration: none;
        }

        .tou {
            background: url("http://static.qpanpan.cn/Content/images/tou.png") no-repeat;
            width: 97px;
            height: 92px;
            position: absolute;
            top: -87px;
            left: 140px;
        }

        .left_hand {
            background: url("http://static.qpanpan.cn/Content/images/left_hand.png") no-repeat;
            width: 32px;
            height: 37px;
            position: absolute;
            top: -38px;
            left: 150px;
        }

        .right_hand {
            background: url("http://static.qpanpan.cn/Content/images/right_hand.png") no-repeat;
            width: 32px;
            height: 37px;
            position: absolute;
            top: -38px;
            right: -64px;
        }

        .initial_left_hand {
            background: url("http://static.qpanpan.cn/Content/images/hand.png") no-repeat;
            width: 30px;
            height: 20px;
            position: absolute;
            top: -12px;
            left: 100px;
        }

        .initial_right_hand {
            background: url("http://static.qpanpan.cn/Content/images/hand.png") no-repeat;
            width: 30px;
            height: 20px;
            position: absolute;
            top: -12px;
            right: -112px;
        }

        .left_handing {
            background: url("http://static.qpanpan.cn/Content/images/left-handing.png") no-repeat;
            width: 30px;
            height: 20px;
            position: absolute;
            top: -24px;
            left: 139px;
        }

        .right_handinging {
            background: url("http://static.qpanpan.cn/Content/images/right_handing.png") no-repeat;
            width: 30px;
            height: 20px;
            position: absolute;
            top: -21px;
            left: 210px;
        }
    </style>

    <link href="http://static.qpanpan.cn/Content/common.css" rel="stylesheet" />
}

<div class="container">
    <div class="row">
        <div class="top_div"></div>
        <div style="background: rgb(255, 255, 255); margin: -100px auto auto; border: 1px solid rgb(231, 231, 231); border-image: none; width: 400px; height: 290px; text-align: center;">
            <div style="width: 165px; height: 96px; position: absolute;">
                <div class="tou"></div>
                <div class="initial_left_hand" id="left_hand"></div>
                <div class="initial_right_hand" id="right_hand"></div>
            </div>
            <p style="padding: 30px 0px 10px; position: relative;">
                <span class="u_logo"></span>
                <input class="ipt" id="username" type="text" placeholder="请输入管理员账户" value="@ViewBag.userName" />
            </p>
            <p style="position: relative;">
                <span class="p_logo"></span>
                <input class="ipt" id="password" type="password" placeholder="请输入登录密码" />
            </p>
            <p style="position:relative; margin-top:12px;">
                <span class="s_logo"></span>
                <input class="ipt" id="security" type="tel" placeholder="请输入验证码" />
                <img src="/Account/SecurityCode" id="scode" onclick="getcode();" style="padding-top: 2px;" /><br />
            </p>
            <input type="checkbox" id="remember" /><label for="remember">记住管理员账号</label>
            <div style="height: 50px; line-height: 50px; margin-top: 30px; border-top-color: rgb(231, 231, 231); border-top-width: 1px; border-top-style: solid;">
                <p style="margin: 0px 35px 20px 45px;">
                    <span style="float: right;">
                        <a style="background: rgb(0, 142, 173); padding: 7px 10px; border-radius: 4px; border: 1px solid rgb(26, 117, 152); border-image: none; color: rgb(255, 255, 255); font-weight: bold;"
                           id="btnlogin" href="javascript:void(0);">登录</a>
                    </span>
                </p>
            </div>
            <label id="error" hidden="hidden" style="color:red;font-size:large;"></label>
        </div>
    </div>
</div>